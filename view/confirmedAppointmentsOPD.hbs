<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="/assets/img/icon.png">
  <title>
    MediPoint - OPD Confirmed Appointments
  </title>
  <!--     Fonts and icons     -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
  <!-- Nucleo Icons -->
  <link href="/assets/css/nucleo-icons.css" rel="stylesheet" />
  <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
  <!-- CSS Files -->
  <link id="pagestyle" href="/assets/css/argon-dashboard.css?v=2.0.2" rel="stylesheet" />
</head>

<body class="g-sidenav-show bg-gray-100">
  <div class="position-absolute w-100 min-height-300 top-0 bg-gradient-success">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5 text-center mx-auto">
          <h3 class="text-white mb-2 mt-5"><i class="ni ni-check-bold"></i> Confirmed Appointments</h3>
          <p class="text-lead text-white">Hi, these are the paid bookings for today at <br> Tarakeshwor Health Clinic.
          </p>
        </div>
      </div>
    </div>
  </div>
  <aside
    class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4 "
    id="sidenav-main">
    <div class="sidenav-header text-center mt-4">
      <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none"
        aria-hidden="true" id="iconSidenav"></i>
      <a href="/" class="text-center">
        <img src="/assets/img/logofinal.png" alt="logo" height="90px" width="90px" class="shadow-lg rounded-circle">
      </a>
    </div>
    <hr class="horizontal dark mt-4">
    <div class="collapse navbar-collapse w-auto " id="sidenav-collapse-main">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">
            <div
              class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-tv-2 text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Dashboard</span>
          </a>
        </li>
        <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs font-weight-bolder opacity-6">OPD Department</h6>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/OPD/incomingAppointments">
            <div
              class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-single-copy-04 text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Incoming Appointments</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active "
            href="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments">
            <div
              class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-check-bold text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Confirmed Appointments</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/dashboard/OPD/cardSearch">
            <div
              class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-books text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">OPD Cards</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/dashboard/OPD/incomingLabTests">
            <div
              class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-support-16 text-success text-lg opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Lab Tests</span>
          </a>
        </li>
      </ul>
    </div>
    <div class="sidenav-footer mx-3 ">
      <div class="card card-plain shadow-none" id="sidenavCard">
        <img class="w-50" src="/assets/img/clinicdashboard.jpg" alt="sidebar_illustration" style="margin-left: 2.5rem;">
        <div class="card-body text-center p-3 w-100 pt-0">
          <div class="docs-info">
            <h6 class="mb-0">Clinic hours completed?</h6>

          </div>
        </div>
      </div>
      <form action="/logout" method="POST">
        <button class="btn btn-dark btn-sm mb-0 w-100">Logout</button>
      </form>
    </div>
  </aside>
  <div class="main-content position-relative max-height-vh-100 h-100">
    <div class="card shadow-lg mx-4 card-profile-bottom">
      <div class="card-body p-3">
        <div class="row gx-4">
          <div class="col-auto my-auto">
            <div class="h-100">
              <div class="container-fluid py-4">
                <div class="row">
                  <h4>Confirmed bookings for today at Tarakeshwor Health Clinic</h4>
                  {{#mesg1}}
                  <div class="col-md-4">
                    <div class="card" style="width: 18rem; margin-top: 2rem">
                      <div class="card-body">
                        <i class="fas fa-clipboard-check shadow text-success"
                          style="font-size: 2rem; margin-bottom:0.5rem;"></i>
                        <h5 class="card-title">Patient ID: {{P_ID}}</h5>
                        <p class="card-text">Patient Name: {{User.Full_Name}}</b></p>
                        <p class="card-text">Address: {{P_Address}}</p>
                        <p class="card-text">Contact: {{Phone}}</p>
                        <a href="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments/newOPDCard/{{Patient_Appointment_Details.0.App_ID}}/dID/{{Patient_Appointment_Details.0.Patient_Appointments.Doctor_ID}}/pID/{{P_ID}}"
                          class="btn btn-dark" id="btnLink"><i class="fas fa-plus-circle"></i> <span
                            class="ms-1 text-light">Make OPD card </span></a>
                      </div>
                    </div>
                  </div>
                  {{/mesg1}}
                  {{#mesg3}}
                  <div class="col-md-4">
                    <div class="card" style="width: 18rem; margin-top: 2rem">
                      <div class="card-body">
                        <i class="fas fa-clipboard-check shadow text-success"
                          style="font-size: 2rem; margin-bottom:0.5rem;"></i>
                        <h5 class="card-title">Patient ID: {{P_ID}}</h5>
                        <p class="card-text">Patient Name: {{User.Full_Name}}</b></p>
                        <p class="card-text">Address: {{P_Address}}</p>
                        <p class="card-text">Contact: {{Phone}}</p>
                        <a href="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments/reappointmentOPDCard/{{Patient_Appointment_Details.0.App_ID}}/dID/{{Patient_Appointment_Details.0.Patient_Appointments.Doctor_ID}}/pID/{{P_ID}}"
                          class="btn btn-dark"><i class="fas fa-eye"></i> <span class="text-light ms-1">View OPD card
                          </span></a>
                      </div>
                    </div>
                  </div>
                  {{/mesg3}}
                  {{#mesg2}}
                  <div class="col-md-8">
                    <div class="card" style="width: 55rem; margin-top: 1rem">
                      <div class="card-body text-center">
                        <i class="fas fa-cannabis text-success" style="font-size: 4rem; margin-bottom:0.5rem;"></i>
                        <p class="card-text">There are no Appointments confirmed for today!</p>
                      </div>
                    </div>
                  </div>
                  {{/mesg2}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="fixed-plugin">
    <a class="fixed-plugin-button text-dark position-fixed px-3 py-2" href="/">
      <i class="fas fa-clinic-medical py-2"></i>
    </a>
  </div>
  <!--   Core JS Files   -->
  <script src="/assets/js/core/popper.min.js"></script>
  <script src="/assets/js/core/bootstrap.min.js"></script>
  <script src="/assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="/assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script src="/assets/js/plugins/chartjs.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }

  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="/assets/js/argon-dashboard.min.js?v=2.0.2"></script>
</body>

</html>