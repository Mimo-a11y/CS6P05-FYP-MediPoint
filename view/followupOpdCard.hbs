<html lang="en">
<head>
   <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/icon.png">
  <title>
    MediPoint - Follow up OPD card
  </title>
  <!--     Fonts and icons     -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
  <!-- Nucleo Icons -->
  <link href="/assets/css/nucleo-icons.css" rel="stylesheet" />
  <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
  <!-- CSS Files -->
  <link id="pagestyle" href="/assets/css/argon-dashboard.css?v=2.0.2" rel="stylesheet" />
</head>
<body class="g-sidenav-show bg-gray-100">
    <div class="position-absolute w-100 min-height-300 top-0 bg-gradient-success">
        <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5 text-center mx-auto">
            <h3 class="text-white mb-2 mt-5"><i class="ni ni-check-bold"></i> Confirmed Appointments</h3>
            <p class="text-lead text-white">Hi, these are the paid bookings for today at <br> Tarakeshwor Health Clinic.</p>
          </div>
        </div>
      </div>
  </div>
  <aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4 " id="sidenav-main">
    <div class="sidenav-header text-center mt-4">
      <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
      <a href="/" class="text-center">
       <img src="/assets/img/logofinal.png" alt="logo" height="90px" width="90px" class="shadow-lg rounded-circle">
      </a>
    </div>
    <hr class="horizontal dark mt-4">
    <div class="collapse navbar-collapse w-auto " id="sidenav-collapse-main">
      <ul class="navbar-nav">
          <li class="nav-item">
          <a class="nav-link" href="/dashboard">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-tv-2 text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Dashboard</span>
          </a>
        </li>
         <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs font-weight-bolder opacity-6">OPD Department</h6>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/dashboard/OPD/incomingAppointments">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-single-copy-04 text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Incoming Appointments</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active " href="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-check-bold text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Confirmed Appointments</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/dashboard/OPD/cardSearch">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-books text-success text-sm opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">OPD Cards</span>
          </a>
        </li>
         <li class="nav-item">
          <a class="nav-link " href="/dashboard/OPD/incomingLabTests">
            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
              <i class="ni ni-support-16 text-success text-lg opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Lab Tests</span>
          </a>
        </li>
      </ul>
    </div>
    <div class="sidenav-footer mx-3 ">
      <div class="card card-plain shadow-none" id="sidenavCard">
        <img class="w-50" src="/assets/img/clinicdashboard.jpg" alt="sidebar_illustration" style="margin-left: 2.5rem;">
        <div class="card-body text-center p-3 w-100 pt-0">
          <div class="docs-info">
            <h6 class="mb-0">Clinic hours completed?</h6>
            
          </div>
        </div>
      </div> 
      <form action="/logout" method="POST">
              <button class="btn btn-dark btn-sm mb-0 w-100">Logout</button>
      </form>
    </div>
  </aside>
  <div class="main-content position-relative max-height-vh-100 h-100">
    <div class="card shadow-lg mx-4 card-profile-bottom">
      <div class="card-body p-3">
        <div class="row gx-4">
          <div class="col-auto my-auto">
            <div class="h-100">
            <div class="container-fluid py-4">
      <div class="row">
          <nav aria-label="breadcrumb mt-0">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
              {{#mesg8}}
               <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:history.back()">Confirmed Appointments</a></li>
               {{/mesg8}}
               {{#mesg9}}
               <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:history.go(-2)">Confirmed Appointments</a></li>
               {{/mesg9}}
             <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Update Visit Detail</li>
          </ol>
        </nav>
        <div class="card" style="width: 55rem; margin-top: 1rem">
        <div class="card-body">
             {{#mesg8}}
              <h5 class="card-title"><i class="fas fa-address-card text-success"></i> Card Detail</h5>
              <hr class="dark mt-1">
              <p class="card-text">Card Number: {{Card_No}}</p>
            {{/mesg8}}

             {{#mesg9}}
              <h5 class="card-title"><i class="fas fa-address-card text-success"></i> Card Detail</h5>
              <hr class="dark mt-1">
              <p class="card-text">Card Number: {{Card_No}}</p>
            {{/mesg9}}

            {{#mesg1}}
            <h5 class="card-title mt-4"><i class="fas fa-user-injured text-success"></i> Patient Details</h5>
              <hr class="dark mt-1">
              <p class="card-text">Patient ID: {{P_ID}}</p>
                <p class="card-text">Patient Name: {{User.Full_Name}}</p>
                  <p class="card-text">Age: {{Age}}</p>
                    <p class="card-text">Gender: {{Gender}}</p>
            {{/mesg1}}

            {{#mesg2}}
             <h5 class="card-title mt-4"><i class="fas fa-hospital-symbol text-success"></i> Consultation Department</h5>
              <hr class="dark mt-1">
              <p class="card-text">Doctor ID: {{D_ID}}</p>
                <p class="card-text">Doctor Name: Dr. {{User.Full_Name}}</p>
                  <p class="card-text">Day: {{Avl_Day}}</p>
                    <p class="card-text">Time: {{Avl_Time}}</p>
            {{/mesg2}}

             {{#mesg3}}
             <h5 class="card-title mt-4"><i class="fas fa-file-alt text-success"></i> Appointment Details</h5>
              <hr class="dark mt-1">
              <p class="card-text">Appointment Type: {{App_Type}} Appointment</p>
                <p class="card-text">Payment Status: {{Payment_Status}}</p>
            {{/mesg3}}

             {{#mesg4}}
             <h5 class="card-title mt-4"><i class="fas fa-file-alt text-success"></i> Appointment Details</h5>
              <hr class="dark mt-1">
              <p class="card-text">Appointment Type: {{App_Type}} Appointment</p>
                <p class="card-text">Payment Status: {{Payment_Status}}</p>
            {{/mesg4}}

                <h5 class="card-title mt-4"><i class="fas fa-info-circle text-success"></i> Follow-up Details</h5>
                 <hr class="dark mt-1">
    <div class="card">
        <div class="card-body">
        <div class="row">
         {{#mesg6}}
         <div class="col-xl-3 col-sm-6 mt-3">
        <a href="/dashboard/myMedicalRecords/cardNo/{{Card_No}}/visitNo/{{Visit_No}}">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <h5 class="font-weight-bolder">
                      Visit No. {{Visit_No}}
                    </h5>
                    <p class="mb-0">
                      <span class="text-success text-sm font-weight-bolder">Visit Date</span><br> {{Visit_Date}}
                    </p>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-success shadow-warning text-center rounded-circle">
                    <i class="ni ni-calendar-grid-58 text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </a>
        </div>
         {{/mesg6}}
         </div>
        </div>
    </div>
    {{#mesg8}}
          <div class="card mt-4">
            <div class="card-body">
                  <h4>Update Visit Number</h4>
                  <hr>
                <form action="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments/reappointmentOPDCard/dID/{{D_ID}}/pID/{{P_ID}}/cardNo/{{Card_No}}/followUpUpdate" method="POST">
                    <div class="form-row">
                        <div class="col">
                        <input type="text" class="form-control" placeholder="Visit Number" name="visitno"  required pattern="^[0-9]+$" title="Visit number must be entered in numbers. e.g. 2">
                        </div>
                        <div class="form-group mt-3">
                            <label for="example-date-input" class="form-control-label"><span class="text-lg text-light text-dark">Visit Date</span></label>
                            <input class="form-control" type="date" value="2018-11-23" id="example-date-input" name="visitDate"  required>
                    </div>
                    <button type="submit" class="btn btn-success">Update</button>
                    </div>
                </form>

        </div>
        </div>
        {{/mesg8}}
        {{#mesg9}}
            <a href="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments" class="btn btn-dark mt-4">Back</a>
        {{/mesg9}}
        </div>
        </div>
      </div>
    </div>
            </div>
          </div>  
        </div>
      </div>
    </div>
  </div>
  <div class="fixed-plugin">
    <a class="fixed-plugin-button text-dark position-fixed px-3 py-2" href="/">
     <i class="fas fa-clinic-medical py-2"></i>
    </a>
  </div>
  <!--   Core JS Files   -->
  <script src="/assets/js/core/popper.min.js"></script>
  <script src="/assets/js/core/bootstrap.min.js"></script>
  <script src="/assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="/assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script src="/assets/js/plugins/chartjs.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
    
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="/assets/js/argon-dashboard.min.js?v=2.0.2"></script>
</body>
</html>