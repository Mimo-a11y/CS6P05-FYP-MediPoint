<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediPoint- Follow up Patient OPD card</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-blue-200">
    <h1 class="text-center text-red-500"><b>OPD dashboard</b></h1>

    <div class="px-5 py-3 text-center">
    <h1 class="mb-8"><b>Menu</b></h1>
    <div class="bg-teal-200 text-center">
    <a href="/dashboard/OPD/incomingAppointments">Incoming Appointments</a> &nbsp; &nbsp; &nbsp;
    <a href="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments">Booked Appointments</a> &nbsp; &nbsp; &nbsp;
    <a href="#">OPD card</a> &nbsp; &nbsp; &nbsp;
    <a href="#">LAB tests</a> &nbsp; &nbsp; &nbsp;
    </div>
    </div>

    <p class="text-center"><b>Patient OPD Card</b></p>

    <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>

    {{#mesg8}}
    <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
            <p><b>Card Details</b></p>
            <p>Card Number: {{Card_No}}</p> <br> 
     </div>
    {{/mesg8}}
    
    {{#mesg9}}
    <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
            <p><b>Card Details</b></p>
            <p>Card Number: {{Card_No}}</p> <br> 
     </div>
    {{/mesg9}}

    {{#mesg1}}
        <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
            <p><b>Patient Details</b></p>
            <p>Patient ID: {{P_ID}}</p>
            <p>Patient Name: {{User.Full_Name}}</p>
            <p>Age: {{Age}}</p>
            <p>Gender: {{Gender}}</p> <br>
    </div>
    {{/mesg1}}

    {{#mesg2}}
    <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
             <p><b>Consultation Department</b></p>
            <p>Doctor ID: {{D_ID}}</p>
            <p>Doctor Name: {{User.Full_Name}}</p>
            <p>Department: {{Dept_Name}}</p>
            <p>Day: {{Avl_Day}}</p>
            <p>Time: {{Avl_Time}}</p> <br>
    </div>
    {{/mesg2}}

     {{#mesg3}}
    <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
            <p><b>Appointment Details</b></p>
            <p>Appointment Type: {{App_Type}}</p>
            <p>Payment Status: {{Payment_Status}}</p> <br>
    </div>
    {{/mesg3}}

    {{#mesg4}}
    <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
        <p><b>Appointment Details</b></p>
        <p>Appointment Type: {{Patient_Appointment_Details.0.App_Type}}</p>
        <p>Payment Status: {{Patient_Appointment_Details.0.Payment_Status}}</p> <br>
    </div>
    {{/mesg4}}

    
    <p><b>Follow-up Details</b></p>
    {{#mesg6}}
    <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
        <button class='mt-8 ml-8 border border-gray-600 rounded-md bg-red-300'>
                <p>Visit Number: {{Visit_No}}</p>
                <p>Visit Date: {{Visit_Date}}</p>
        </button> <br> <br>
    </div>
    {{/mesg6}}

        {{#mesg8}}
        <div class='mt-8 ml-8 border border-gray-600 rounded-md bg-teal-200 text-center'>
        <p><b>Update visit number</b></p>
        <form action="/dashboard/OPD/incomingAppointments/appointmentDetails/confirmedAppointments/reappointmentOPDCard/dID/{{D_ID}}/pID/{{P_ID}}/cardNo/{{Card_No}}/followUpUpdate" method="POST">
        <label for="visitno">Visit Number</label>
        <input type="text" name="visitno" id="visitno" required pattern="^[0-9]+$" title="Visit number must be entered in numbers. e.g. 2"> <br> <br>

        <label for="visitDate">Visit Date</label>
        <input type="date" name="visitDate" id="visitDate" required> <br> <br>

        <button class="text-gray-50  hover:bg-sky-700 bg-sky-500 px-5 py-3 mt-6">Update</button>
        </form>
         </div>
        {{/mesg8}}
         
    </div>

    <form action="/logout" method="POST">
        <button class="text-gray-50  hover:bg-teal-700 bg-teal-500 px-5 py-3 mt-6">Logout</button>
    </form>
</body>
</html>